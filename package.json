{
    "name": "rncp_monorepo",
    "version": "3.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "lint": "eslint .",
        "format": "prettier --write .",
        "prepare": "husky",
        "dev": "pnpm run dev:all",
        "dev:front": "pnpm --filter rncp-pwa-front dev",
        "dev:api": "pnpm --filter rncp_api dev",
        "dev:microservices": "pnpm --filter rncp_api dev:microservices",
        "dev:all": "pnpm --filter rncp-pwa-front --filter rncp_api --parallel dev",
        "dev:all-micro": "pnpm --filter rncp-pwa-front dev & pnpm --filter rncp_api dev:microservices",
        "build": "pnpm --filter @rncp/types build && pnpm --filter rncp-pwa-front build && pnpm --filter rncp_api build",
        "build:types": "pnpm --filter @rncp/types build",
        "start": "echo 'Use railway deploy from specific app directories'",
        "start:frontend": "pnpm --filter rncp-pwa-front preview --host 0.0.0.0",
        "start:api": "pnpm --filter rncp_api start:gateway",
        "test": "pnpm --filter rncp_api test",
        "test:watch": "pnpm --filter rncp_api test:watch",
        "test:cov": "pnpm --filter rncp_api test:cov"
    },
    "lint-staged": {
        "**/*.{js,ts,tsx}": [
            "eslint --fix"
        ],
        "**/*": "prettier --write --ignore-unknown"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^19.8.1",
        "@commitlint/config-conventional": "^19.8.1",
        "@eslint/js": "^9.32.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "globals": "^16.3.0",
        "husky": "^9.1.7",
        "jiti": "^2.5.1",
        "lint-staged": "^16.1.2",
        "typescript-eslint": "^8.38.0"
    },
    "dependencies": {
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.0.0",
        "eslint-plugin-react-refresh": "^0.4.18"
    }
}
