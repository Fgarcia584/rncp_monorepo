# Backend API Environment Variables Example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration - REQUIRED
# Generate a secure 256-bit key with:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# Example: JWT_SECRET=AbCdEfGhIjKlMnOpQrStUvWxYz0123456789+/AbCdEfGh==
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=rncp_user
DB_PASSWORD=your-secure-database-password
DB_NAME=rncp_db

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# Google Maps Configuration
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE
GOOGLE_MAPS_REGION=FR
GOOGLE_MAPS_LANGUAGE=fr

# Sentry Configuration
# Get your DSN from https://sentry.io/settings/[your-org]/projects/[your-project]/keys/
SENTRY_DSN=
# Example: SENTRY_DSN=https://abc123@o123456.ingest.sentry.io/123456

# Application Version (optional - for release tracking)
APP_VERSION=1.0.0
